{
    "version": 1,
    "disable_existing_loggers": true,
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        }
    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        },

        "debug_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "filename": "LogFiles/debug.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "encoding": "utf8"
        },

        "info_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "simple",
            "filename": "LogFiles/info.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "encoding": "utf8"
        },

        "error_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "ERROR",
            "formatter": "simple",
            "filename": "LogFiles/errors.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "encoding": "utf8"
        }
    },

    "loggers": {
        "ErrorLogs": {
            "level": "ERROR",
            "handlers": ["error_file_handler", "console"],
            "propagate": "no"
        },
        "InfoLogs": {
            "level": "INFO",
            "handlers": ["info_file_handler", "console"],
            "propagate": "no"
        },
        "DebugLogs": {
            "level": "DEBUG",
            "handlers": ["debug_file_handler", "console"],
            "propagate": "no"
        }

    },

    "root": {
        "level": "NOTSET",
        "handlers": ["debug_file_handler"]

    }


}